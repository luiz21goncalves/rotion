{
  "extends": ["@rocketseat/eslint-config/react"],
  "rules": {
    "import/order": ["warn", {
      "groups": [
        ["builtin", "external"],
        "internal",
        ["parent", "sibling", "index"]
      ],
      "newlines-between": "always",
      "alphabetize": {
        "order": "asc"
      },
      "pathGroups": [
        {
          "pattern": "@/**",
          "group": "internal"
        }
      ]
    }]
  }
}
